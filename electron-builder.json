{
  "appId": "com.example.app",
  "files": [
    "dist-react", 
    "dist-electron"
  ],
  "asarUnpack": [
    "dist-electron/preload.cjs"
  ],
  "icon": "./desktopIcon.png",
  "directories": {
    "output": "dist"
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable", "nsis"],
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}